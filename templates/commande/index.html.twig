{% extends 'base.html.twig' %}

{% block title %}
    <title>Alpha Fitness | Gestion des commandes</title>
{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcommande</th>
                <th>Numéro de commande</th>
                <th>Idclient</th>
                <th>Date</th>
                <th>Montant</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idcommande }}</td>
                <td>{{ commande.numc }}</td>
                <td>{{ commande.idclient }}</td>
                <td>{{ commande.datecom ? commande.datecom|date('Y-m-d') : '' }}</td>
                <td>{{ commande.montantcom }}</td>
                <td>{{ commande.etatcom }}</td>
                <td>
                    <a href="{{ path('details_commande_index', {'idcommande': commande.idcommande}) }}">show</a>
                    <a href="{{ path('commande_edit', {'idcommande': commande.idcommande}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Créer commande  </a>
    <a href="{{ path('commande_listec')}}">Imprimer</a>
{% endblock %}
