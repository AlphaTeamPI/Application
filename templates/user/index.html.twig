{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Table Of Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>User's Image</th>
                <th>Role</th>
                <th>Birthday</th>
                <th>imageCard</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ user.imageuser }}" alt></td>
                <td>{{ user.role }}</td>
                <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d') : '' }}</td>
                {% for carte in cartes %}
                    {% if carte.username==user.username %}
                        <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ carte.imagecard }} " alt>{{ carte.typeofcard }}</td>
                    {% else %}
                        <td>{{ 'pas de carte' }}</td>
                    {% endif %}
                {% endfor %}
                <td>
                    <a href="{{ path('user_show', {'iduser': user.iduser}) }}">show User</a>
                    <br>
                    <a href="{{ path('user_edit', {'iduser': user.iduser}) }}">edit User</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new User</a>
    <br>
    <a href="{{ path('user_list') }}">print list of Users</a>
{% endblock %}
