{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username}}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Imageuser</th>
                <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ user.imageuser }}" alt></td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Datedenaissance</th>
                <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>imageCard</th>
               {% for carte in carte %}
                   {% if carte.username==user.username %}
                <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ carte.imagecard }} " alt>{{ carte.typeofcard }}</td>
                   {% else %}
                <td>{{ 'pas de carte' }}</td>
                   {% endif %}
               {% endfor %}
            </tr>

        </tbody>
    </table>


    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'iduser': user.iduser}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
